<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card h-100 bg-light text-dark shadow-sm border-1 movie-card">
    <% if movie.poster_url.present? %>
      <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
    <% else %>
      <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 400px;">
        <span class="text-muted">No image</span>
      </div>
    <% end %>

    <div class="card-body d-flex flex-column justify-content-between">
      <div>
        <h5 class="card-title fw-bold"><%= movie.title %></h5>
        <p class="card-text text-secondary"><%= truncate(movie.overview, length: 100) %></p>
      </div>
      <% if movie.respond_to?(:rating) && movie.rating.present? %>
        <div class="mt-2">
          <span class="badge bg-danger">‚≠ê <%= movie.rating.round(1) %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
