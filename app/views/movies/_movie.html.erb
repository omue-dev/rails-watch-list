<div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
  <div class="card h-100 bg-dark text-light border-0 movie-card position-relative overflow-hidden">

    <% movie = bookmark.movie %>

    <!-- Movie Poster -->
    <% if movie.poster_url.present? %>
      <img src="<%= movie.poster_url %>"
           alt="<%= movie.title %>"
           class="card-img-top object-fit-cover"
           style="height: 300px;">
    <% else %>
      <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
        <span class="text-muted">No image</span>
      </div>
    <% end %>

    <!-- Card Content -->
    <div class="card-body d-flex flex-column justify-content-between p-3">
      <div>
        <!-- Title -->
        <h6 class="fw-bold mb-2 text-light"><%= movie.title %></h6>

        <!-- Overview -->
        <p class="card-text text-secondary small mb-0">
          <%= truncate(movie.overview, length: 80) %>
        </p>
      </div>

      <!-- Optional user note -->
      <% if bookmark.comment.present? %>
        <div class="mt-3 p-2 bg-secondary bg-opacity-25 border-start border-3 border-danger rounded">
          <small class="text-info fw-bold d-block mb-1">Your note:</small>
          <p class="fst-italic mb-0 text-light">"<%= bookmark.comment %>"</p>
        </div>
      <% end %>

      <!-- Rating badge -->
      <% if movie.respond_to?(:rating) && movie.rating.present? %>
        <span class="badge bg-danger mt-3 align-self-start">‚≠ê <%= movie.rating.round(1) %></span>
      <% end %>

      <!-- Delete button -->
      <%= link_to bookmark_path(bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this movie?" },
                  class: "btn btn-outline-danger btn-sm fw-bold w-100 mt-3 shadow-sm" do %>
        <i class="fa-solid fa-trash-can me-1"></i> Delete
      <% end %>
    </div>
  </div>
</div>
